generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  name      String
  lastname  String
  phone     String?
  email     String @unique
  porras    Porra[]
  tokens    Token[]
}

model Porra {
  id            Int @id @default(autoincrement())
  nombre        String
  userId        Int
  user          User @relation(fields: [userId], references: [id])
  corredores    CorredorPorra[] //15
  costo         Float    @default(30.0)
  pagada        Boolean  @default(false) 
  createdAt     DateTime @default(now())
  puntosTotales Int             @default(0)
  ranking       Int?  
}

model Corredor {
  id       Int    @id @default(autoincrement())
  nombre   String
  apellido String
  dorsal   Int    @unique
  porras   CorredorPorra[]
  resultados ResultadoEtapa[]
  url      String
}

model CorredorPorra {
  id         Int      @id @default(autoincrement())
  porra      Porra    @relation(fields: [porraId], references: [id])
  porraId    Int
  corredor   Corredor @relation(fields: [corredorId], references: [id])
  corredorId Int
  puntos     Int      @default(0)
 

  @@unique([porraId, corredorId]) // para q no se dupliquen los corredores.
}

model Token {
  id           Int @id @default(autoincrement())
  token        String @unique
  expiracion   DateTime
  used         Boolean  @default(false) 
  user         User @relation(fields: [userId], references: [id])
  userId       Int
}

model Etapa {
  id      Int @id @default(autoincrement())
  numero  Int @unique
  fecha   DateTime
  tipo    TipoEtapa
  recorrido String?
  kilometros String?
  resultados ResultadoEtapa[]
}

model ResultadoEtapa {
  id          Int @id @default(autoincrement())
  etapa       Etapa @relation(fields: [etapaId], references: [id])
  etapaId     Int
  corredor    Corredor @relation(fields: [corredorId], references: [id])
  corredorId  Int
  posicion    Int


  @@unique([etapaId, corredorId])
}

enum TipoEtapa {
  EtapasDiarias
  Descanso
  FinalMonta√±a
  FinalGeneral
}
